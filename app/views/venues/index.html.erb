<div class="container">
  <h2 class="mb-4 mt-5 fs-1 text-center">Venues</h2>

  <% if current_user&.owner %>

   <div class="d-flex justify-content-center">
    <%= link_to "Create", new_venue_path, class: "btn btn-outline-warning mt-3 mb-3 lh-lg w-50 text-center" %>
   </div>
  <% end %>

  <ul class="list-unstyled">
    <% @venues.each do |venue| %>
    <li class="bg-white shadow p-3 mb-5 bg-body-tertiary rounded-4 text-center">

            <%= cl_image_tag venue.photos.first.key, class: "img-fluid rounded-start", alt:"Venue image" %>


      <h4 class="mt-3 fw-bold"><%= venue.name %></h4>
      <p class="mb-0"><%= venue.location %></p>
      <p><%= venue.category %></p>
      <%= link_to '<i class="fa fa-eye""></i> Show'.html_safe, venue_path(venue), class: 'btn btn-info shadow-sm smaller-button rounded-pill' %>

    </li>
    <% end %>
  </ul>
</div>
