<div class="container">
<%= simple_form_for(@event) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :image %>
  <%= f.input :venue_id, collection: @venues%>
  <%= f.input :date %>
  <%= f.input :price %>
  <%= f.input :category %>
  <%= f.submit class: "btn btn-success mt-3 lh-lg w-100" %>
<% end %>

<%= link_to "Go Back", events_path(@events), class: "btn btn-secondary btn-lg mt-3 w-100" %>
</div>
