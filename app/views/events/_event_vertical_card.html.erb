<a class="card-click" href="<%= events_path %>">
<div class="event-card" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=event.image%>)">
  <div class="event-card-info">
    <div class="event-card-text">
      <h5><%=event.name %></h5>
      <p><%= event.date.strftime("%d.%m.%Y") %></p>
      <p><%= event.time.strftime("%I:%M %p") %></p>
    </div>
    <% if event.discounts.any? %>
     <p><del><%= event.price%>€</del></p>
     <button class="btn btn-secondary"><%= event.discounts.last.title %></br><%= event.discounts.last.new_price %>€</button>
    <% else  %>
    <button class="btn btn-secondary"><%= event.price%>€</button>
    <% end %>
  </div>
</div>
</a>
