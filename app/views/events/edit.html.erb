<div class="container">
<%= simple_form_for(@event) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :date %>
  <%= f.input :time %>
  <%= f.input :price %>
  <%= f.input :category, collection: Event::CATEGORIES %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit class: "btn btn-outline-warning mt-3 lh-lg w-100" %>
  <%= link_to "Go Back", events_path(@events), class: "btn btn-secondary btn-lg mt-3 w-100" %>
</div>
<% end %>
</div>
