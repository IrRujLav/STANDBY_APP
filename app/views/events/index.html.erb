<div class="container" style="margin-top: 20px;">
  <div class="row ">
    <div class="col-sm-12">
      <h1 style="text-align: center;"><strong class="events-page-title">Events</strong></h1>

    <% if current_user&.owner %>
        <div class="d-flex justify-content-center">
    <%= link_to "Create", new_event_path, class: "btn btn-outline-warning mt-3 mb-3 lh-lg w-50 text-center" %>
    <% end %>
   </div>
    </div>
    <% if @events.empty? %>
      <h1>Ups, there are no events like that!</h1>
    <% else %>
      <% @events.each do |event| %>
        <%= render 'event_horizontal_card', event: event %>
      <% end %>
    <% end %>
  </div>
</div>
