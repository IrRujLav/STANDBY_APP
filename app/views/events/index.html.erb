<div class="container" style="margin-top: 20px;">
  <div class="row ">
    <div class="col-sm-12">
      <%= link_to "<- Back", root_path, class: "d-flex justify-content-start btn btn-secondary" %>
      <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn btn-dark" %>
      <h1 style="text-align: center;">Events</h1>
    </div>
    <% if @events.empty? %>
      <h1>The events that you are searching for don't exist</h1>
    <% else %>
      <% @events.each do |event| %>
        <%= render 'card', event: event %>
      <% end %>
    <% end %>
  </div>
</div>
