




<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1501281668745-f7f57925c3b4?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="banner-text">
    <h1> <strong>StandByApp</strong></h1>
    <h2>The app where your time turns into money</h2>
    <h3>Buy StandBy tickets for your favourite events. Get a massive discount. Come to the venue. If you don't get a slot, get your money back! </h3>
    <%# <a class="btn btn-flat" href="#">Apply now</a> %>
  </div>
    <div class="category-buttons">
      <%= link_to "Stand Up", events_path(category:"Stand up comedy"), class: "category-filter btn btn-secondary" %>
      <%= link_to "Improv", events_path(category:"Improv"), class: "category-filter justify-content-start btn btn-secondary" %>
      <%= link_to "Open Mic", events_path(category:"Open mic"), class: "category-filter justify-content-start btn btn-secondary" %>
      <%= link_to "Live Music", events_path(category:"Live music"), class: "category-filter justify-content-start btn btn-secondary" %>
      <%= link_to "Theater", events_path(category:"Theater"), class: "category-filter justify-content-start btn btn-secondary" %>
    </div>
</div>
<h1 class="events-page-title" >Events happening right now!</h1>
<div class="events">
  <% @events.sort_by {|e| [e.date, e.time] }.each do |event|%>
      <%= render "event_vertical_card", event: event %>
  <% end %>
</div>

<div class="events-container" style="margin-top: 20px;">
  <div class="row ">
    <div class="col-sm-12">
      <h1 class="events-page-title" >Events close to you!</h1>
    </div>
  </div>

    <% @events.each do |event| %>
      <%= render 'event_horizontal_card', event: event %>
    <% end %>
</div>




